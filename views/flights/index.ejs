<%- include("../partials/html-head") %> <%- include("../partials/nav") %>

<main>
  <h1>Flight List</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Flight No.</th>
        <th>Airport</th>
        <th>Departure</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(flight => { %>

      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.flightNo %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.departs.toLocaleDateString() %></td>
        <td><a href="/flights/<%= flight._id %>/show">Edit</a></td>
        <td>
          <form
            action="/flights/<%= flight._id %>?_method=DELETE"
            method="post"
          >
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>

      <% }) %>
    </tbody>
  </table>
</main>

<%-include("../partials/footer") %>
